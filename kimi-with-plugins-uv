#!/bin/bash
#
# Kimi CLI with User Plugins (UV版本)
# ===================================
#
# 适用于通过 uv 安装的 kimi-cli
#

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# 添加 src 到 PYTHONPATH
export PYTHONPATH="${SCRIPT_DIR}/src:${PYTHONPATH}"

# 使用 uv 运行带插件的 kimi-cli
cd "$SCRIPT_DIR"
exec uv run python -m kimi_cli.plugins.entry "$@"
